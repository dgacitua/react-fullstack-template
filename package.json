{
  "name": "react-fullstack-template",
  "version": "1.1.1",
  "description": "A template for Fullstack webapps based on React + Node.js",
  "author": "Daniel Gacitua <daniel.gacitua@usach.cl> (http://dgacitua.info)",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "npm run clean && npm run build && npm run prod",
    "stop": "forever stop ./build/server/index.js && forever stop -c http-server ./build/client -p 3000",
    "test": "echo \"Error: no test specified\" && exit 1",
    "assets": "mkdirp ./build/assets && cpx ./assets/**/* ./build/assets",
    "build-server": "mkdirp ./build/server && babel ./server --out-dir ./build/server",
    "build-client": "mkdirp ./build/server && parcel build ./client/index.html --out-dir ./build/client",
    "build": "npm run build-server && npm run build-client && npm run assets",
    "prod-server": "forever start ./build/server/index.js",
    "prod-client": "forever start -c http-server ./build/client -p 3000",
    "prod": "npm run prod-server && npm run prod-client",
    "dev-server": "babel-watch ./server/index.js",
    "dev-client": "parcel ./client/index.html --port 3000",
    "dev": "concurrently \"npm run dev-server\" \"npm run dev-client\"",
    "clean": "rimraf ./build"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.3",
    "@fortawesome/fontawesome-free": "^5.8.1",
    "axios": "^0.18.0",
    "bootstrap": "^4.3.1",
    "core-js": "^3.0.1",
    "express": "^4.16.4",
    "react": "^16.8.6",
    "react-bootstrap": "^1.0.0-beta.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "babel-watch": "^7.0.0",
    "concurrently": "^4.1.0",
    "cpx": "^1.5.0",
    "forever": "^1.0.0",
    "http-server": "^0.11.1",
    "mkdirp": "^0.5.1",
    "parcel-bundler": "^1.12.3",
    "rimraf": "^2.6.3"
  }
}
